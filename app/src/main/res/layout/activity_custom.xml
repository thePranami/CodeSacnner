<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webrication.qr.code.reader.generator.scanner.CustomActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appp_bar_custom">

        <include
            layout="@layout/scan_toolbar"></include>

    </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appp_bar_custom"
        android:layout_above="@+id/frame">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/generate_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18dp"
            android:singleLine="true"
            android:layout_marginTop="35dp"
            android:hint="Enter text to generate QR Code"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select logo :"
            android:id="@+id/slect_logo"
            android:textSize="18dp"
            android:layout_below="@+id/generate_text"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"/>


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/image_logo"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/generate_text"
            android:background="@drawable/ic_insert_photo"
            android:layout_marginTop="25dp"/>

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR Code"
            android:textSize="18dp"
            android:layout_above="@+id/generate_image"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/generate_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Generate"
            android:id="@+id/generate"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:visibility="visible"
            android:textColor="#fff"
            android:background="@color/color_code"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save To Photos"
            android:id="@+id/save"
            android:textAllCaps="false"
            android:textSize="25dp"
            android:textColor="#fff"
            android:visibility="gone"
            android:background="@color/color_code"
            />
    </FrameLayout>

</RelativeLayout>
